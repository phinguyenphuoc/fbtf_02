<div class="card">
  <div class="card-body">
    <div class="table-responsive">
      <div>
        <%= render "form" %>
      </div>
      <table class="table table-hover">
        <thead>
          <tr>
            <th><%= t ".id" %></th>
            <th><%= t ".name" %></th>
          </tr>
        </thead>
        <tbody class="locations">
          <%= render @locations %>
        </tbody>
      </table>
      <%= paginate @locations %>
    </div>
  </div>
</div>
